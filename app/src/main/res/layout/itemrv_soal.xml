<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/itemsoal_number"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:text="1."
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemsoal_soal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:text="Soal soal soal soal???"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/itemsoal_number"
            app:layout_constraintTop_toTopOf="@+id/itemsoal_number" />

        <RadioGroup
            android:id="@+id/itemsoal_radio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checkedButton="@+id/radio_button_2"
            app:layout_constraintEnd_toEndOf="@+id/itemsoal_soal"
            app:layout_constraintStart_toStartOf="@+id/itemsoal_soal"
            app:layout_constraintTop_toBottomOf="@+id/itemsoal_soal">

            <RadioButton
                android:id="@+id/radio_button_1"
                style="@style/Widget.App.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/jawaban_button_back"
                android:fontFamily="@font/proxima_nova_semibold"
                android:paddingStart="10dp"
                android:text="Tidak Baik" />

            <RadioButton
                android:id="@+id/radio_button_2"
                style="@style/Widget.App.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/jawaban_button_back"
                android:fontFamily="@font/proxima_nova_semibold"
                android:paddingStart="10dp"
                android:text="Kurang Baik" />

            <RadioButton
                android:id="@+id/radio_button_3"
                style="@style/Widget.App.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/jawaban_button_back"
                android:fontFamily="@font/proxima_nova_semibold"
                android:paddingStart="10dp"
                android:text="Cukup" />

            <RadioButton
                android:id="@+id/radio_button_4"
                style="@style/Widget.App.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/jawaban_button_back"
                android:fontFamily="@font/proxima_nova_semibold"
                android:paddingStart="10dp"
                android:text="Baik" />

            <RadioButton
                android:id="@+id/radio_button_5"
                style="@style/Widget.App.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jawaban_button_back"
                android:fontFamily="@font/proxima_nova_semibold"
                android:paddingStart="10dp"
                android:text="Sangat Baik" />

        </RadioGroup>

        <Button
            android:id="@+id/itemsoal_selesai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:text="Selesai"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/itemsoal_soal"
            app:layout_constraintStart_toStartOf="@+id/itemsoal_number"
            app:layout_constraintTop_toBottomOf="@+id/itemsoal_radio" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A2E70"
    tools:context=".SurveymenuActivity">

    <TextView
        android:id="@+id/surveymenu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:text="Survey"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/surveymenu_back"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#612974"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/surveymenu_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/surveymenu_title"
        app:srcCompat="@drawable/ic_back"
        tools:ignore="SpeakableTextPresentCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_top_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surveymenu_back"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_menu1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/gray_button"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:pointerIcon="context_menu"
                android:text="Perilaku Inovatif Guru"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imagemenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/purple_circle"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/surveymenu_menu1"
                app:layout_constraintEnd_toEndOf="@+id/surveymenu_menu1"
                app:layout_constraintTop_toTopOf="@+id/surveymenu_menu1"
                app:srcCompat="@drawable/ic_right" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_menu2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/gray_button"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:pointerIcon="context_menu"
                android:text="Intensi Berinovasi"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surveymenu_menu1" />

            <ImageView
                android:id="@+id/imagemenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/purple_circle"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/surveymenu_menu2"
                app:layout_constraintEnd_toEndOf="@+id/surveymenu_menu2"
                app:layout_constraintTop_toTopOf="@+id/surveymenu_menu2"
                app:srcCompat="@drawable/ic_right" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_menu3"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/gray_button"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:pointerIcon="context_menu"
                android:text="Sikap Terhadap Inovasi"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surveymenu_menu2" />

            <ImageView
                android:id="@+id/imagemenu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/purple_circle"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/surveymenu_menu3"
                app:layout_constraintEnd_toEndOf="@+id/surveymenu_menu3"
                app:layout_constraintTop_toTopOf="@+id/surveymenu_menu3"
                app:srcCompat="@drawable/ic_right" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_menu4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/gray_button"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="60dp"
                android:pointerIcon="context_menu"
                android:text="Norma Subjektif Terhadap Kreativitas"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surveymenu_menu3" />

            <ImageView
                android:id="@+id/imagemenu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/purple_circle"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/surveymenu_menu4"
                app:layout_constraintEnd_toEndOf="@+id/surveymenu_menu4"
                app:layout_constraintTop_toTopOf="@+id/surveymenu_menu4"
                app:srcCompat="@drawable/ic_right" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_menu5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/gray_button"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:pointerIcon="context_menu"
                android:text="Efikasi Berinovasi"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surveymenu_menu4" />

            <ImageView
                android:id="@+id/imagemenu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/purple_circle"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/surveymenu_menu5"
                app:layout_constraintEnd_toEndOf="@+id/surveymenu_menu5"
                app:layout_constraintTop_toTopOf="@+id/surveymenu_menu5"
                app:srcCompat="@drawable/ic_right" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_menu6"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/gray_button"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="60dp"
                android:paddingBottom="5dp"
                android:pointerIcon="context_menu"
                android:text="Budaya Organisasi Berorientasi Pembelajaran"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surveymenu_menu5" />

            <ImageView
                android:id="@+id/imagemenu6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/purple_circle"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/surveymenu_menu6"
                app:layout_constraintEnd_toEndOf="@+id/surveymenu_menu6"
                app:layout_constraintTop_toTopOf="@+id/surveymenu_menu6"
                app:srcCompat="@drawable/ic_right" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_menu7"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/gray_button"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:pointerIcon="context_menu"
                android:text="Self-Determination"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surveymenu_menu6" />

            <ImageView
                android:id="@+id/imagemenu7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/purple_circle"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/surveymenu_menu7"
                app:layout_constraintEnd_toEndOf="@+id/surveymenu_menu7"
                app:layout_constraintTop_toTopOf="@+id/surveymenu_menu7"
                app:srcCompat="@drawable/ic_right" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/surveymenu_reset"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@drawable/red_button"
                android:enabled="true"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="center"

                android:pointerIcon="context_menu"
                android:text="Reset"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surveymenu_menu7" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
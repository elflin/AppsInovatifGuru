<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/itemTrainingPerkenalanJudulTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:text="Perkenalan"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemTrainingPerkenalanProfilTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="7"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Dr. Jimmy Ellya Kurniawan, S.Psi., M.Si., Psikolog"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/itemTrainingPerkenalanJudulTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

        <TextView
            android:id="@+id/itemTrainingPerkenalanProfilTextView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="7"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Perilaku Inovatif Guru"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/itemTrainingPerkenalanJudulTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="@+id/imageView12" />

        <TextView
            android:id="@+id/itemTrainingPerkenalanProfilTextView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="7"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Evan Tanuwijaya, S.Kom., M.Kom."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/itemTrainingPerkenalanJudulTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView13" />

        <TextView
            android:id="@+id/itemTrainingPerkenalanProfilTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="7"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="@string/DeskripsiPakJimmy"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/itemTrainingPerkenalanProfilTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/itemTrainingPerkenalanProfilTextView"
            app:layout_constraintTop_toBottomOf="@+id/itemTrainingPerkenalanProfilTextView" />

        <TextView
            android:id="@+id/itemTrainingPerkenalanProfilTextView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="7"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi nostrum asperiores explicabo minus. Eius vel, vero ea velit laudantium odit earum harum itaque qui repudiandae minus ab."
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/itemTrainingPerkenalanProfilTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/itemTrainingPerkenalanProfilTextView7"
            app:layout_constraintTop_toBottomOf="@+id/itemTrainingPerkenalanProfilTextView7" />

        <TextView
            android:id="@+id/itemTrainingPerkenalanProfilTextView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="7"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="@string/DeskripsiEvan"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/itemTrainingPerkenalanProfilTextView"
            app:layout_constraintStart_toStartOf="@+id/itemTrainingPerkenalanProfilTextView9"
            app:layout_constraintTop_toBottomOf="@+id/itemTrainingPerkenalanProfilTextView9" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/itemTrainingPerkenalanJudulTextView"
            app:layout_constraintTop_toBottomOf="@+id/itemTrainingPerkenalanJudulTextView"
            app:srcCompat="@drawable/photo_jimmy" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/itemTrainingPerkenalanProfilTextView2"
            app:srcCompat="@drawable/contohpp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/itemTrainingPerkenalanProfilTextView8"
            app:srcCompat="@drawable/photo_evan" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
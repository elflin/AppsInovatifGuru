<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/riwayat_cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#F2F2F2"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/button_switch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/riwayat_tanggal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/riwayat_nilai"
                app:srcCompat="@drawable/ic_down" />

            <ImageView
                android:id="@+id/riwayat_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sangat_tinggi" />

            <TextView
                android:id="@+id/riwayat_nilai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="TextView"
                android:textColor="#6D6E6F"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/button_switch"
                app:layout_constraintStart_toEndOf="@+id/riwayat_image"
                app:layout_constraintTop_toTopOf="@+id/riwayat_image" />

            <TextView
                android:id="@+id/riwayat_tanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/riwayat_image"
                app:layout_constraintEnd_toEndOf="@+id/riwayat_nilai"
                app:layout_constraintStart_toStartOf="@+id/riwayat_nilai"
                app:layout_constraintTop_toBottomOf="@+id/riwayat_nilai" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/riwayat_expand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button_switch"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/riwayat_image"
                app:layout_constraintTop_toBottomOf="@+id/riwayat_image">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/dimensi1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Idea Generation"
                        android:textColor="#707070"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nilai1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout1">

                    <TextView
                        android:id="@+id/dimensi2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Idea Promotion"
                        android:textColor="#707070"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView152"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nilai2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout2">

                    <TextView
                        android:id="@+id/dimensi3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Idea Realization"
                        android:textColor="#707070"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView1512"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nilai3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout3">

                    <TextView
                        android:id="@+id/dimensi4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Idea Realization"
                        android:textColor="#707070"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView15122"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nilai4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/riwayat_angka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_extrabold"
                android:text="99"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="@+id/riwayat_image"
                app:layout_constraintEnd_toEndOf="@+id/riwayat_image"
                app:layout_constraintStart_toStartOf="@+id/riwayat_image"
                app:layout_constraintTop_toTopOf="@+id/riwayat_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>